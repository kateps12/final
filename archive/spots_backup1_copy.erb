<h1>Ode to Pizza</h1>
<h2>Vote for your favorite pizza spot!</h2>
<h2>or find your next one ... </h2>

<div class="container">
  <div class="row">
    <div class="col-md-6"> 
        <h3>Team Thin Crust!</h3>
        <h4>"####" Strong</h4>
        <% for spot in @spots %>
            <% if spot[:thincrust] == "Yes" %>
                <p><a href="/spots/<%= spot[:id] %>"><%= spot[:name] %></a></p> 
                <a href="/spots/<%= spot[:id] %>/votes/new" class="btn btn-primary">Vote now! add a href to vote sheet </a>
            <% else %>
            <% end %>
        <% end %>
    </div>
    <div class="col-md-6"> 
        <h3>Team Deep Dish!</h3>
        <h4>"####" Strong</h4>
        <% for spot in @spots %>
            <% if spot[:thincrust] == "No" %>
                <p><a href="/spots/<%= spot[:id] %>"><%= spot[:name] %></a></p>
                <a href="/spots/<%= spot[:id] %>/votes/new" class="btn btn-primary">Vote now! add a href to vote sheet </a>
            <% else %>
            <% end %>
        <% end %>
    </div>
  </div>
</div>
